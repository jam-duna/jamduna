[package]
name = "jam-null-authorizer"
version.workspace = true
edition.workspace = true
authors.workspace = true
repository.workspace = true
license.workspace = true
publish = true
description = "A JAM authorizer which always authorizes"

[lints]
workspace = true

[dependencies]
jam-types = { path = "../../crates/jam-types", version = "0.1.21", default-features = false }
jam-pvm-common = { path = "../../crates/jam-pvm-common", version = "0.1.21", default-features = false, features = ["logging", "authorizer"] }
polkavm-derive = { workspace = true }

[features]
tiny = ["jam-types/tiny", "jam-pvm-common/tiny"]
